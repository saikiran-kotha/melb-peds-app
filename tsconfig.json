{
    "compilerOptions": {
      "target": "ES2021",
      "module": "NodeNext",
      "moduleResolution": "NodeNext",
      "strict": true,
      "esModuleInterop": true,
      "skipLibCheck": true,
      "forceConsistentCasingInFileNames": true,
      "baseUrl": ".",
      "paths": {
        "@frontend/*": ["packages/frontend/*"],
        "@backend/*": ["packages/backend/*"]
      }
    },
    "include": ["packages/**/*"]
  }
  